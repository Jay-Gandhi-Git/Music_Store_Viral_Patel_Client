@model IEnumerable<Music.PhotoAlbum>
@{
    ViewBag.Title = "Photos";
    Layout = "~/Views/Shared/Outer_LayoutPage_Visit_Menu.cshtml";
}

<link href="~/css/lightcase.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/css/font-awesome.min.css" />
<link href="//fonts.googleapis.com/css?family=Varela+Round&subset=hebrew" rel="stylesheet">
<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
<script>
    $(document).ready(function () {


        $("#menu1").children().removeClass("active");
        $("#menu1").children("#liPhotos").addClass("active");

    });
</script>
<style>
    .font {
        font-size: 13px;
        color: lightgray;
    }
</style>
<script type="text/javascript">
    jQuery(window).load(function () {
        //jQuery("#status").fadeOut();
        jQuery("#preloader").delay(1800).fadeOut("slow");
    })
</script>

<div id="preloader">
    <div id="status">&nbsp;</div>
</div>
<div class="mail">
    <div class="container">
        <h2 class="agileinfo_header">Album Photos</h2>
    </div>
</div>
<div class="container">
    
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div>
                <img src="~/Uploaded/@item.CoverPhoto" alt="" class="img-responsive" />
            </div>
            <div>
                <table class="table">
                    <tr><td>Title: @item.Title</td></tr>
                    <tr>
                        <td>
                            @Html.ActionLink("Photos", "AlbumDetail", new {id=item.PhotoAlbum_Id })
                        </td>
                    </tr>
                </table>
            </div>
        </div> 
    }

</div>







<script src="~/js/lightcase.js"></script>
<script src="~/js/jquery.events.touch.js"></script>
<script>
    $('.showcase').lightcase();
</script>
<script type="text/javascript" src="~/js/move-top.js"></script>
<script type="text/javascript" src="~/js/easing.js"></script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(".scroll").click(function (event) {
            event.preventDefault();
            $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        /*
			var defaults = {
			containerID: 'toTop', // fading element id
			containerHoverID: 'toTopHover', // fading element hover id
			scrollSpeed: 1200,
			easingType: 'linear'
			};
		*/

        $().UItoTop({ easingType: 'easeOutQuart' });

    });
</script>


