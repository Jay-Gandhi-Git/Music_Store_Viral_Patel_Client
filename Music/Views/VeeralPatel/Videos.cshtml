@model IEnumerable<Music.Video>
@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/Outer_LayoutPage_Visit_Menu.cshtml";
}

<script>
    $(document).ready(function () {


        $("#menu1").children().removeClass("active");
        $("#menu1").children("#liVideos").addClass("active");
    });
</script>
<style>
    .font {
        font-size: 13px;
        color: lightgray;
    }
</style>
<script type="text/javascript">
    jQuery(window).load(function () {
        //jQuery("#status").fadeOut();
        jQuery("#preloader").delay(1800).fadeOut("slow");
    })
</script>

<div id="preloader">
    <div id="status">&nbsp;</div>
</div>
<div class="mail">
    <div class="container">
        <h2 class="agileinfo_header">Videos</h2>
    </div>
</div>
<div class="container banner-bottom" style="margin-top:0px;padding-top:0px;">
    <div class="w3ls_portfolio_grids col-md-11">
        @foreach (var item in Model)
        {
            <div class="col-md-12 agileinfo_portfolio_grid" style="padding:3px;">
                <div class="w3_agile_portfolio_grid1" style="box-shadow:0px 0px 3px lightgray; padding:10px;min-height:200px;">
                    <div class="col-md-8">
                        <iframe width="100%" height="250px" src="@item.VideoUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    </div>
                    <div class="col-md-4">
                        <table >
                            <tr>
                                <th ><span class="tbFont"> Singer Name : </span></th>
                                <td><span class="tbFont">@item.SingerName</span></td>
                            </tr>
                            <tr>
                                <th><span class="tbFont">Composer Name : </span></th>
                                <td><span class="tbFont">@item.ComposerName</span></td>
                            </tr>
                            <tr>
                                <th><span class="tbFont">Lyrics Writer : </span></th>
                                <td><span class="tbFont">@item.LyricsWriter</span></td>
                            </tr>
                            <tr>
                                <th><span class="tbFont">Music Produser : </span></th>
                                <td><span class="tbFont">@item.MusicProducer</span></td>
                            </tr>
                            <tr>
                                <th><span class="tbFont">Music Label : </span></th>
                                <td><span class="tbFont">@item.MusicLabel</span></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

